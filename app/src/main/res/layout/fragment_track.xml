<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 按钮区域放在底部 -->
    <LinearLayout
        android:id="@+id/actionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:background="@color/card"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnStartFinish"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="START"
            android:textColor="@color/text"
            android:backgroundTint="@color/accent"/>

        <Button
            android:id="@+id/btnPause"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="PAUSE"
            android:textColor="@color/text"
            android:backgroundTint="@color/good"
            android:layout_marginStart="16dp"/>

        <Button
            android:id="@+id/btnSetLine"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="SET LINE"
            android:textColor="@color/text"
            android:backgroundTint="@color/bad"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- 状态信息区域 -->
    <LinearLayout
        android:id="@+id/statsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/card"
        app:layout_constraintBottom_toTopOf="@+id/actionsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 左侧：统计信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 km"
                android:textColor="@color/text"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

            <TextView
                android:id="@+id/tvPointCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 points"
                android:textColor="@color/text"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        </LinearLayout>

        <!-- 右侧：宽容度设置 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track Tolerance"
                android:textColor="@color/muted"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/btnTolerance"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Street (40m)"
                android:textColor="@color/accent"
                android:textSize="12sp"
                android:minWidth="0dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Google Maps 地图区域 -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/statsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>