<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 按钮区域放在底部 -->
    <LinearLayout
        android:id="@+id/actionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnStartFinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_recording"/>

        <Button
            android:id="@+id/btnPause"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pause"
            android:layout_marginStart="16dp"/>

        <Button
            android:id="@+id/btnSetLine"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_line"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- 状态信息区域 -->
    <LinearLayout
        android:id="@+id/statsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/card"
        app:layout_constraintBottom_toTopOf="@+id/actionsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0 km"
            android:textColor="@color/text"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/tvPointCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 points"
            android:textColor="@color/text"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
    </LinearLayout>

    <!-- 地图区域 - 临时用 View 替代测试 -->
    <View
        android:id="@+id/mapPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/chip"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/statsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Recording Area\n(Map will be here)"
        android:textColor="@color/text"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/mapPlaceholder"
        app:layout_constraintBottom_toBottomOf="@+id/mapPlaceholder"
        app:layout_constraintStart_toStartOf="@+id/mapPlaceholder"
        app:layout_constraintEnd_toEndOf="@+id/mapPlaceholder"/>

    <!-- 真正的地图 Fragment（暂时注释）
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/statsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    -->

</androidx.constraintlayout.widget.ConstraintLayout>